services:
  basket.api:
    build:
      context: C:\Users\dbaue\source\repos\.NETMicroservices\src
      dockerfile: Services/Basket/Basket.API/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Basket.API
      target: base
    container_name: basket.api
    depends_on:
      basketdb:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      CacheSettings:ConnectionString: basketdb:6379
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      GrpcSettings:DiscountUrl: http://discount.grpc
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: basketapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  ""'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 8001
      target: 80
    tty: true
    volumes:
    - C:\Users\dbaue\source\repos\.NETMicroservices\src\Services\Basket\Basket.API:/app:rw
    - C:\Users\dbaue\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\dbaue\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\dbaue\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Program Files (x86)\Microsoft Visual Studio\Shared\NuGetPackages:/root/.nuget/fallbackpackages:ro
    - C:\Users\dbaue\.nuget\packages:/root/.nuget/packages:ro
    - C:\Users\dbaue\source\repos\.NETMicroservices\src:/src:rw
  basketdb:
    container_name: basketdb
    image: redis:alpine
    ports:
    - published: 6379
      target: 6379
    restart: always
  catalog.api:
    build:
      context: C:\Users\dbaue\source\repos\.NETMicroservices\src
      dockerfile: Services/Catalog/Catalog.API/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Catalog.API
      target: base
    container_name: catalog.api
    depends_on:
      catalogdb:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      DatabaseSettings:ConnectionString: mongodb://catalogdb:27017
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: catalogapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  "/app/bin/Debug/net5.0/Catalog.API.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 8000
      target: 80
    tty: true
    volumes:
    - C:\Users\dbaue\source\repos\.NETMicroservices\src\Services\Catalog\Catalog.API:/app:rw
    - C:\Users\dbaue\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\dbaue\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\dbaue\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Program Files (x86)\Microsoft Visual Studio\Shared\NuGetPackages:/root/.nuget/fallbackpackages:ro
    - C:\Users\dbaue\.nuget\packages:/root/.nuget/packages:ro
    - C:\Users\dbaue\source\repos\.NETMicroservices\src:/src:rw
  catalogdb:
    container_name: catalogdb
    image: mongo
    ports:
    - published: 27017
      target: 27017
    restart: always
    volumes:
    - mongo_data:/data/db:rw
  discount.grpc:
    build:
      context: C:\Users\dbaue\source\repos\.NETMicroservices\src
      dockerfile: Services/Discount/Discount.Grpc/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Discount.Grpc
      target: base
    container_name: discount.grpc
    depends_on:
      discountdb:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      DatabaseSettings:ConnectionString: Server=discountdb;Port=5432;Database=DiscountDb;User
        Id=admin;Password=admin123;
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: discountgrpc:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  ""'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 8003
      target: 80
    tty: true
    volumes:
    - C:\Users\dbaue\source\repos\.NETMicroservices\src\Services\Discount\Discount.Grpc:/app:rw
    - C:\Users\dbaue\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\dbaue\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\dbaue\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Program Files (x86)\Microsoft Visual Studio\Shared\NuGetPackages:/root/.nuget/fallbackpackages:ro
    - C:\Users\dbaue\.nuget\packages:/root/.nuget/packages:ro
    - C:\Users\dbaue\source\repos\.NETMicroservices\src:/src:rw
  discountdb:
    container_name: discountdb
    environment:
      POSTGRES_DB: DiscountDb
      POSTGRES_PASSWORD: admin123
      POSTGRES_USER: admin
    image: postgres
    ports:
    - published: 5432
      target: 5432
    restart: always
    volumes:
    - postgres_data:/var/lib/postgresql/data/:rw
  pgadmin:
    container_name: pgadmin
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@admin.com
      PGADMIN_DEFAULT_PASSWORD: admin123
    image: dpage/pgadmin4
    ports:
    - published: 5050
      target: 80
    restart: always
    volumes:
    - pgadmin_data:/root/.pgadmin:rw
version: '3.4'
volumes:
  mongo_data: {}
  pgadmin_data: {}
  postgres_data: {}